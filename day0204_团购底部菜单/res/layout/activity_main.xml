<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hello_world" 
        android:textSize="30sp"/>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/selecter_deal_bg"
            android:gravity="center"
            android:text="团购" 
            android:textColor="@drawable/selector_text_color"
            />

        <RadioButton
            android:id="@+id/rb_nearby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/selector_nearby_bg"
            android:gravity="center"
            android:text="附近"
 android:textColor="@drawable/selector_text_color"/>

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/selector_mine_bg"
            android:gravity="center"
            android:text="我的" 
             android:textColor="@drawable/selector_text_color"/>

        <RadioButton
            android:id="@+id/rb_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/selector_more_bg"
            android:gravity="center"
            android:text="更多"
             android:textColor="@drawable/selector_text_color" />
    </RadioGroup>

</RelativeLayout>